<Window x:Class="AtsGpsSocketTool.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Closing="Window_Closing"
        Loaded="Window_Loaded">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="35"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="75"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="75"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button x:Name="button" Grid.Column="0" Content="Start" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"  Click="button_Click"  Margin="5"/>
            <ComboBox x:Name="comboBoxIp" Grid.Column="1" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" Margin="5"/>
            <TextBox x:Name="textBoxPort"  Grid.Column="2" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" TextWrapping="Wrap" Text="8887" Margin="5"/>
        </Grid>

        <Grid Grid.Row="1">
            <TabControl HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
                <TabItem Header="ServerLogs">
                    <DataGrid Name="dataGridServerLog" AutoGenerateColumns="True" ></DataGrid>
                </TabItem>
                <TabItem Header="Mvt100 Log">
                    <ListView Name="listViewMvt100">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding DateTime}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader>DateTime</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>
                                <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Description}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader>Description</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>
                                <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding Description}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader>Description</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>
                                <GridViewColumn Width="Auto" DisplayMemberBinding="{Binding LogType}">
                                    <GridViewColumn.Header>
                                        <GridViewColumnHeader>Status</GridViewColumnHeader>
                                    </GridViewColumn.Header>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
            </TabControl>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto"></ColumnDefinition>
                <ColumnDefinition Width="auto" ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Label Content="Tcp Client(s) : " Grid.Column="0" Margin="5"></Label>
            <Label Name="labelTcpClientCount" Content="{Binding TcpClientCount, FallbackValue=0}" Grid.Column="1" Margin="5"></Label>
            <Button Name="buttonClearServerLog" Content="Clear Server Log" Click="buttonClearServerLog_Click" Grid.Column="2" Margin="5"></Button>
        </Grid>
    </Grid>
</Window>
